<div class="container">
  <div class="form">
    <div class="form-title">
      <h1>New Task</h1>
    </div>
    <div class="simple_form">
      <%= simple_form_for @task do |f| %>
        <%= f.input :title %>
        <%= f.input :details %>
        <%= f.input :completed, as: :boolean%>
        <%= f.submit %>
      <% end %>
    </div>
    <%= link_to "back to list", tasks_path %>
  </div>
</div>
